rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.email in ['admin@devdonations.org'] ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Donations collection - public read, anyone can create, admin write
    match /donations/{donationId} {
      allow read: if true; // Public can read donations
      allow create: if true; // Anyone can create donations
      allow update, delete: if isAdmin();
    }

    // Volunteers collection - public can create, admin can read/write all
    match /volunteers/{volunteerId} {
      allow read: if isAdmin();
      allow create: if true; // Anyone can submit volunteer applications
      allow update, delete: if isAdmin();
    }

    // Events collection - public read, admin write
    match /events/{eventId} {
      allow read: if true; // Public can read events
      allow create, update, delete: if isAdmin();
    }

    // Distribution events collection - public read, admin write
    match /distribution_events/{eventId} {
      allow read: if true; // Public can read events
      allow create, update, delete: if isAdmin();
    }

    // Blogs collection - public read published posts, admin write
    match /blogs/{blogId} {
      allow read: if resource.data.status == 'published' || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    // Users collection - users can read their own data, admins can read/write all
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    // Analytics data - admin only
    match /analytics/{document=**} {
      allow read, write: if isAdmin();
    }
  }
}